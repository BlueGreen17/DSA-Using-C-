#include<iostream>
using namespace std;

int main()
{
    int arr[5] = {3,6,2,7,8};
    
    int max = arr[0];          // we will initialize it to first element of arr because max element in the array itself
    for(int i=0;i<5;i++)
    {
        if(arr[i]> max)
        {
            max = arr[i];
        }
    }

    cout<<"The max element within the array will be:"<<max<<endl;

}
